<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlorAll.Views.Welcome" >
    <ContentPage.Content>
        <Grid>
            <Image Source="bg_welcome.jpg" Aspect="AspectFill"></Image>
        
            <StackLayout Padding="20" HorizontalOptions="FillAndExpand" VerticalOptions="End">
                <Label Text="Avançar"
                       HorizontalTextAlignment="Center"
                       TextColor="White">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>

                    
                </Label>
                <Label Text="Resolvido o problema do Francisco" TextColor="White"></Label>
            </StackLayout>
        
        </Grid>
    </ContentPage.Content>
</ContentPage>